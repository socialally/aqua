/* COLOR VARIABLES */

$white                  := #fff;
$black                  := #000;

// solarized colours
$base03                 := #002b36;
$base02                 := #073642;
$base01                 := #586e75;
$base00                 := #657b83;
$base0                  := #839496;
$base1                  := #93a1a1;
$base2                  := #eee8d5;
$base3                  := #fdf6e3;
$yellow                 := #b58900;
$orange                 := #cb4b16;
$red                    := #dc322f;
$magenta                := #d33682;
$violet                 := #6c71c4;
$blue                   := #268bd2;
$cyan                   := #2aa198;
$green                  := #859900;

// intended to be default foreground color
$normal-color           := $base00;

// should always be a light color
$bright-color           := $base3;

// should always be a dark color
$dark-color             := $base03;

// named color variants
$muted-color            := $base01;
$primary-color          := $blue;
$warn-color             := $orange;
$error-color            := $red;
$success-color          := $green;

// should be opposite contrast to the default color
// themes with light and dark variations should invert
// the default and inverse colors
$inverse-color          := $base2;

/* FONT VARIABLES */

$code-font              := monospace;

/* ELEMENT VARIABLES */

// <html>
$html-bs                := border-box;

// html is set to 62.5% so that all the REM measurements 
// are based on 10px sizing. So basically 1.5rem = 15px
$html-fs                := 62.5%;

// *, *:before, *:after
$wildcard-bs            := inherit;

// <h1> - <h6>
$heading-color          := $base2;

// <p>
$p-mt                   := 0;

// <a href>
// <code>
$code-bg-color          := $base02;
$code-fg-color          := $magenta;
$code-padding           := 2px;
$code-br                := 3px;
$code-ff                := $code-font;
$code-fs                := 2rem;
$code-lh                := 1.2;

// <pre>
$pre-ff                 := $code-font;
$pre-fs                 := 2rem;

// <kbd>
$kbd-ff                 := $code-font;
$kbd-fs                 := 2rem;

// <del>
$del-td                 := line-through;

/* ELEMENT BLOCK STYLES */

// NOTE: 1. Block declarations must not use the variable prefix: $
// NOTE: 2. Many blocks are placeholders that allow *extending* built-in
// NOTE:    declarations, eg: a-block to extend the default anchor styles.
// NOTE:    To customise the default styles for an element use the variables section.

// html
html-block              := {}

// h1-h6
h-block                 := {}
h1-block                := {}
h2-block                := {}
h3-block                := {}
h4-block                := {}
h5-block                := {}
h6-block                := {}

// button
button-block            := {
  border                : 0
  background            : transparent
  padding               : 0
  -webkit-appearance    : none
}

// p
p-block                 := {}

// code (all <code> elements)
code-block              := {}

// code (inline <code> elements, not directly within <pre>)
inine-code-block        := {}

// pre
pre-block               := {}

// em
em-block                := {
  font-style            : italic
}

// del
del-block               := {}

// strong
strong-block            := {}

/* COMPONENT BLOCK STYLES */

// .c-btn
btn-block               := {
  background            : $base01
  padding               : .4rem
  color                 : $base3
  line-height           : normal
  border-radius         : 2px
}

btn-hover-block         := {
  text-decoration       : none
}

btn-primary-block       := {
  background            : $primary-color
}

btn-success-block       := {
  background            : $success-color
}

btn-warn-block          := {
  background            : $warn-color
}

btn-error-block         := {
  background            : $error-color
}

// .c-dd, .c-dd-toggle, .c-dd-list, .c-dd-item
dropdown-block          := {}
dropdown-toggle-block   := {}
dropdown-list-block     := {
  display               : none
}
dropdown-item-block     := {
  display               : block !important
}
