h1, h2, h3, h4, h5, h6
  color: $heading-color;
  margin-top: 0;
  margin-bottom: 2rem;
  {h-block}

h1
  font-size: 4.0rem;
  line-height: 1.2;
  letter-spacing: -.1rem;
  {h1-block}

h2
  font-size: 3.6rem;
  line-height: 1.25;
  letter-spacing: -.1rem;
  {h2-block}

h3
  font-size: 3.0rem;
  line-height: 1.3;
  letter-spacing: -.1rem;
  {h3-block}

h4
  font-size: 2.4rem;
  line-height: 1.35;
  letter-spacing: -.08rem;
  {h4-block}

h5
  font-size: 1.8rem;
  line-height: 1.5;
  letter-spacing: -.05rem;
  {h5-block}

h6
  font-size: 1.5rem;
  line-height: 1.6;
  letter-spacing: 0;
  {h6-block}
