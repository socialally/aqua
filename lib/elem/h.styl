// vars
$heading-color          := $base2;

// blocks
h-block                 := {
  color                 : $heading-color
  margin-top            : 0
  margin-bottom         : 2rem
}

h1-block                := {
  font-size             : 4.0rem
  line-height           : 1.2
  letter-spacing        : -.1rem
}

h2-block                := {
  font-size             : 3.6rem
  line-height           : 1.25
  letter-spacing        : -.1rem
}

h3-block                := {
  font-size             : 3.0rem
  line-height           : 1.3
  letter-spacing        : -.1rem
}

h4-block                := {
  font-size             : 2.4rem
  line-height           : 1.35
  letter-spacing        : -.08rem
}

h5-block                := {
  font-size             : 1.8rem
  line-height           : 1.5
  letter-spacing        : -.05rem
}

h6-block                := {
  font-size             : 1.5rem
  line-height           : 1.6
  letter-spacing        : 0
}

// rules
h1, h2, h3, h4, h5, h6
  {h-block}

h1
  {h1-block}

h2
  {h2-block}

h3
  {h3-block}

h4
  {h4-block}

h5
  {h5-block}

h6
  {h6-block}
