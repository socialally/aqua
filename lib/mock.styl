// blocks
mock-video                            := {
  background                          : $base02
  background-image                    : url('../img/pattern.png')
  width                               : 100%
  height                              : 250px
}

mock-mini-image                       := {
  background                          : $base02
  background-image                    : url('../img/pattern.png')
  width                               : 75px
  height                              : 75px
}

mock-small-image                      := {
  background                          : $base02
  background-image                    : url('../img/pattern.png')
  width                               : 150px
  height                              : 150px
}


// rules
.mock.video
  {mock-video}

.mock.image.mini
  {mock-mini-image}

.mock.image.small
  {mock-small-image}

div + p.mock
  padding-left: 15px;

.content-row
  .mock.image
    margin: 0 15px 0 0;
